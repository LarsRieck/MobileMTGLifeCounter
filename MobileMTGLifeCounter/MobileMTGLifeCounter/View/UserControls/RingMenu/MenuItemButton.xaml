<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileMTGLifeCounter.View.UserControls.RingMenu.MenuItemButton"
             x:Name="MenuButton">
  <ContentView.Content>
        <ImageButton x:Name="ActualButton" BackgroundColor="Transparent" BindingContext="{x:Reference MenuButton}" Source="{Binding MenuItemVM.Name}" Command="{Binding MenuItemVM.StoredCommand}" HeightRequest="75" WidthRequest="75" CornerRadius="90" Background="Black"/>
    </ContentView.Content>
</ContentView>